{
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "lib": ["dom", "es2018"],
    "moduleResolution": "Bundler",
    "module": "esnext",
    "jsx": "react",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}
